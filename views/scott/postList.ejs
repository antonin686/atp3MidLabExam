<div class="bread">
    <div class="container">
        <ol class="breadcrumb pd-3">
            <li class="breadcrumb-item"><a href="/scott/home">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="#"></a>Posts</a></li>      
        </ol>  
    </div>
</div>

<div class="container">
        <div class="p-3">
                <a class="btn btn-primary" href="/scott/post/create" role="button">Add Post</a>
        </div>
  <div class="row">

    <div class="col-md-12">
      
        <div class="card card-body">
            
          <div class="col-md-6 mx-auto">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="name">
                <div class="input-group-append">
                  <button id="btn-search" class="btn btn-outline-secondary" type="button">Search</button>
                </div>
            </div>
          </div>
          </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Place</th>
                            <th scope="col">Country</th>
                            <th scope="col">Info</th>
                            <th scope="col">Short History</th>
                            <th scope="col">Travel Medium</th>
                            <th scope="col">Status</th>                              
                        </tr>
                    </thead>
                        <tbody>
                            <% for(var i = 0; i< postList.length; i++) {%>
                                <tr>
                                    <th scope="row"> <%= postList[i].p_id %> </th>
                                    <td> <%= postList[i].place_name %></td>
                                    <td> <%= postList[i].country %> </td>
                                    <td> <%= postList[i].place_info %> </td>
                                    <td> <%= postList[i].short_history %> </td>
                                    <td> <%= postList[i].travel_medium %> </td>
                                    <% if(postList[i].status == 0) {%>
                                    <td> <%='processing' %>  </td> <% }else {%>
                                        <td> <%='accepted' %> </td> <% } %>
                                    <td>
                                    <a class="btn btn-info" href="/scott/post/edit/<%= postList[i].u_id %>"  role="button">Edit</a>
                                    
                                    </td>
                             
                                </tr>
                            <% } %>
                    </tbody>
                </table>
        </div>
    </div>

    

  </div>  
</div>


<%- contentFor('title') %>