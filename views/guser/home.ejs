<div class="bread">
    <div class="container">
      <ol class="breadcrumb pd-3">
        <li class="breadcrumb-item active">Dashboard</li>
      </ol>
    </div>
  </div>
  
  <div class="container">
    <div class="col-md-12">
      <div class="card card-body">
        <div class="col">
          <div class="col-md-6 mx-auto">
            <div class="form-group">
              <input type="text" class="form-control" id="myInput" placeholder="Search">
            </div>
          </div>
          <div class="col-md-12 mx-auto">
            <% for(var i = 0; i< postList.length; i++) {%>
            <div id="<%= postList[i].place_name %>" class="card">
              <div class="card-header">
                <%= postList[i].place_name %>
              </div>
              <div id="<%= postList[i].p_id %>" class="card-body card-post">
                <strong>Country</strong>: <%= postList[i].country %> <br>
                <strong>Travel Medium</strong>: <%= postList[i].travel_medium %> <br>
                <strong>Cost</strong>: <%= postList[i].cost %> <br>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script>
    $(document).ready(function () {
  
      $("#myInput").keyup(function () {
        tableFilter();
      });
  
      $('.card-post').click((e) =>{
        var id = $(event.currentTarget).attr("id");
  
          if(id != null)
          {
              window.location.href= `/guser/post/info/${id}`;
          }
        
      });
  
      function tableFilter() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
  
        var tr = document.getElementsByClassName("card");
        for (i = 0; i < tr.length; i++) {
          td = tr[i].id;
          console.log(td)
          if (td) {
            txtValue = td;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
              tr[i].style.display = "";
            } else {
              tr[i].style.display = "none";
            }
          }
        }
      }
  
    });
  </script>