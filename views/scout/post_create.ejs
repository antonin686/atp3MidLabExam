<div class="bread">
  <div class="container">
    <ol class="breadcrumb pd-3">
      <li class="breadcrumb-item"><a href="/scout/home">Dashboard</a></li>
      <li class="breadcrumb-item ac"><a href="/scout/postList">My Posts</a></li>
      <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
  </div>
</div>

<div class="container">
  <div class="row">

    <div class="col-md-12">
      <div class="card card-body">
        <form method="POST">
          <div class="form-group">
            <label for="name">Place Name</label>
            <input type="text" class="form-control" name="place_name" placeholder="Place Name">
          </div>
          <div class="form-group">
            <label for="name">Country</label>
            <input type="text" class="form-control" name="country" placeholder="Enter Country">
          </div>
          <div class="form-group">
            <label for="place_info">Place Info</label>
            <textarea class="form-control" name="place_info" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label for="short_history">Short History</label>
            <textarea class="form-control" name="short_history" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label for="travel_medium">Travel Medium</label>
            <input type="text" class="form-control" name="travel_medium" placeholder="Enter Travel Medium">
          </div>
          <div class="form-group">
            <label for="password">Cost</label>
            <input type="text" class="form-control" name="cost" placeholder="Enter Cost">
          </div>

          <button type="submit" class="btn btn-primary"> Create post</button>
        </form>
      </div>
    </div>

  </div>
</div>

<%- contentFor('title') %>